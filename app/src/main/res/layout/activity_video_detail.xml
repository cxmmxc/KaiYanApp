<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDecorView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
      android:id="@+id/videoPlayer"
      android:layout_width="0dip"
      android:layout_height="0dip"
      android:background="@color/black"
      app:layout_constraintDimensionRatio="H,16:9"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:transitionName="transition_detail_name"
      />

  <ImageView
      android:id="@+id/detailRelatedBgIv"
      android:layout_width="0dip"
      android:layout_height="0dip"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/videoPlayer"
      />
  <View
      android:layout_width="0dip"
      android:layout_height="0dip"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/videoPlayer"
      android:background="@color/transparent_31"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/detailRelatedRecyclerView"
      android:layout_width="0dip"
      android:layout_height="0dip"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/videoPlayer"
      />
  <ProgressBar
      android:id="@+id/detailProgress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      style="@android:style/Widget.Material.Light.ProgressBar"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
